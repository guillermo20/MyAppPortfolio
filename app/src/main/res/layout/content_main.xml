<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.guillermo.myappportfolio.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:text="@string/main_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/movies_button"
            android:layout_width="240sp"
            android:layout_height="40sp"
            android:background="#2E3D49"
            android:text="@string/popular_movies"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/stock_hawk_button"
            android:layout_width="240sp"
            android:layout_height="40sp"
            android:background="#2E3D49"
            android:text="@string/stock_hawk"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/build_it_bigger_button"
            android:layout_width="240sp"
            android:layout_height="40sp"
            android:background="#2E3D49"
            android:text="@string/build_it_bigger"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/make_your_app_material_button"
            android:layout_width="240sp"
            android:layout_height="40sp"
            android:background="#2E3D49"
            android:text="@string/make_your_app_material"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/go_ubiquitous_button"
            android:layout_width="240sp"
            android:layout_height="40sp"
            android:background="#2E3D49"
            android:text="@string/go_ubiquitous"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/capstone_button"
            android:layout_width="240sp"
            android:layout_height="40sp"
            android:background="#2E3D49"
            android:text="@string/capstone"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>
</RelativeLayout>
